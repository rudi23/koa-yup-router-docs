{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./lib",
    "removeComments": true,
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES5",
    "lib": ["es2020"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "lib"]
}
